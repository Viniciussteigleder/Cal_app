// Patient Log Entries (Prontuário - Medical Record)
model PatientLogEntry {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  tenant_id  String   @db.Uuid
  patient_id String   @db.Uuid
  entry_type String // 'consultation', 'call', 'question', 'note'
  timestamp  DateTime @default(now()) @db.Timestamptz(6)

  // Flexible content storage (JSONB)
  // For consultation: { text, transcription, summary: { chief_complaint, history, ... }, tasks: [...] }
  // For note: { text, tasks: [...] }
  content Json

  // Authorship
  created_by String    @db.Uuid
  created_at DateTime  @default(now()) @db.Timestamptz(6)
  updated_at DateTime  @default(now()) @updatedAt @db.Timestamptz(6)
  deleted_at DateTime? @db.Timestamptz(6) // Soft delete

  @@index([patient_id, timestamp(sort: Desc)])
  @@index([entry_type])
  @@index([tenant_id, patient_id])
}

// Exam Uploads (original documents)
model ExamUpload {
  id                String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  tenant_id         String   @db.Uuid
  patient_id        String   @db.Uuid
  file_url          String
  file_name         String
  file_size         Int
  exam_date         DateTime @db.Date
  lab_name          String?
  observations      String?
  detected_language String?  @db.VarChar(5) // 'pt', 'de', 'en'
  uploaded_by       String   @db.Uuid

  // Processing status
  extraction_status String  @default("pending") // 'pending', 'processing', 'completed', 'failed'
  extraction_error  String?

  created_at DateTime @default(now()) @db.Timestamptz(6)
  updated_at DateTime @default(now()) @updatedAt @db.Timestamptz(6)

  // Relations
  results ExamResultExtracted[]

  @@index([patient_id, exam_date(sort: Desc)])
  @@index([tenant_id, patient_id])
  @@index([extraction_status])
}

// Canonical Exam List (master reference for biomarkers)
model ExamCanonical {
  id             String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  common_name    String // e.g., "Colesterol Total"
  technical_name String? // e.g., "Colesterol Total Sérico"
  category       String? // e.g., "Lipid Panel", "CBC", "Liver Function"

  // Synonyms for multilingual matching
  synonyms_pt String[] // Portuguese synonyms
  synonyms_de String[] // German synonyms
  synonyms_en String[] // English synonyms

  // Reference ranges (optional, can vary by lab)
  typical_unit String? // e.g., "mg/dL", "mmol/L"

  created_at DateTime @default(now()) @db.Timestamptz(6)

  // Relations
  results ExamResultExtracted[]

  @@index([common_name])
}

// Extracted Exam Results (AI-extracted biomarkers)
model ExamResultExtracted {
  id                String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  tenant_id         String  @db.Uuid
  patient_id        String  @db.Uuid
  upload_id         String  @db.Uuid
  canonical_exam_id String? @db.Uuid // Mapped to canonical exam (null if unmapped)

  // Extracted data
  raw_name        String // As extracted from document
  value           Decimal? @db.Decimal(10, 4)
  unit            String?
  reference_range String? // e.g., "150-200 mg/dL"
  is_abnormal     Boolean  @default(false)

  // AI metadata
  confidence_level String @default("medium") // 'high', 'medium', 'low'

  // Validation workflow
  validation_status String    @default("pending") // 'pending', 'validated', 'rejected'
  validated_by      String?   @db.Uuid
  validated_at      DateTime? @db.Timestamptz(6)
  validation_notes  String?

  created_at DateTime @default(now()) @db.Timestamptz(6)
  updated_at DateTime @default(now()) @updatedAt @db.Timestamptz(6)

  // Relations
  upload         ExamUpload     @relation(fields: [upload_id], references: [id], onDelete: Cascade)
  canonical_exam ExamCanonical? @relation(fields: [canonical_exam_id], references: [id])

  @@index([patient_id, created_at(sort: Desc)])
  @@index([upload_id])
  @@index([canonical_exam_id])
  @@index([validation_status])
  @@index([tenant_id, patient_id])
}

