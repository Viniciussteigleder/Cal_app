# ===========================================
# NutriPlan - Variáveis de Ambiente
# ===========================================

# Configuração do Banco de Dados
# Para Vercel, use Vercel Postgres ou Supabase Postgres:
DATABASE_URL="postgresql://user:password@host:5432/nutriplan?sslmode=require"

# Configuração do Supabase
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"  # REQUIRED for Storage Uploads/Deletes
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"

# ===========================================
# Serviços Externos (Produção)
# ===========================================

# OpenAI - Para Agentes de IA (Vision, Whisper, LLM)
OPENAI_API_KEY="sk-..."

# Resend - Para Envio de Emails
RESEND_API_KEY="re_..."

# Configuração da Aplicação
NEXT_PUBLIC_APP_URL="https://your-app.vercel.app"
SESSION_SECRET="uma-chave-longa-e-segura"

# ===========================================
# Senha de Demonstração
# ===========================================
# Defina uma senha segura para as contas de demonstração.
DEMO_PASSWORD="sua-senha-segura-aqui"

# ===========================================
# Dev Autologin (apenas desenvolvimento local)
# ===========================================
# DEV_AUTOLOGIN="true"
# DEV_USER_ID="your-dev-user-id"
# DEV_TENANT_ID="your-dev-tenant-id"
# DEV_ROLE="PATIENT"

# ===========================================
# Stripe (Assinaturas e Pagamentos)
# ===========================================
STRIPE_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
NEXT_PUBLIC_STRIPE_PRICE_PRO="price_..."
NEXT_PUBLIC_STRIPE_PRICE_PRO_MAX="price_..."
NEXT_PUBLIC_STRIPE_PRICE_PRO_MAX_AI="price_..."

# ===========================================
# Rate Limit (Upstash)
# ===========================================
UPSTASH_REDIS_REST_URL="https://your-upstash-redis-url"
UPSTASH_REDIS_REST_TOKEN="your-upstash-token"

# ===========================================
# Anthropic (Claude AI)
# ===========================================
ANTHROPIC_API_KEY="sk-ant-..."

# ===========================================
# AI Features (OpenAI)
# ===========================================
OPENAI_API_KEY="sk-proj-REPLACE_WITH_YOUR_KEY"
AI_FEATURES_ENABLED=true
AI_DEFAULT_LLM_MODEL=gpt-4-turbo-preview
AI_DEFAULT_VISION_MODEL=gpt-4-vision-preview
AI_DEFAULT_STT_MODEL=whisper-1
AI_MAX_TOKENS=4000
AI_REQUEST_TIMEOUT=30000
AI_MAX_COST_PER_EXECUTION=1.00
AI_DAILY_COST_LIMIT=50.00
